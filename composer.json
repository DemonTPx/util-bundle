{
    "name": "demontpx/util-bundle",
    "description": "Various Symfony2 utils",
    "type": "symfony-bundle",
    "keywords": ["utility"],
    "license": "MIT",
    "require": {
        "php": ">=5.5",
        "symfony/framework-bundle": "^2.4|^3.0",
        "symfony/form": "^2.4|^3.0",
        "doctrine/orm": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "twig/twig": "^1.16",
        "cocur/slugify": "^0.4"
    },
    "autoload": {
        "psr-4": { "Demontpx\\UtilBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Demontpx\\UtilBundle\\": "tests/" }
    },
    "config": {
        "bin-dir": "bin"
    }
}
